<div class="container">
  <form class="form-horizontal">
    <fieldset>

      <!-- Form Name -->
      <legend>Register to Mondaily</legend>

      <!-- Text input-->
      <div class="form-group">
        <label class="col-md-4 control-label" for="textinput">User name</label>
        <div class="col-md-4">
          <input id="textinput" name="textinput" type="text" placeholder="User" class="form-control input-md" required="">

        </div>
      </div>


      <!-- Select Basic -->
      <div class="form-group">
        <label class="col-md-4 control-label" for="selectCountry">Select country</label>
        <div class="col-md-4">
          <select id="selectCountry" name="selectCountry" class="form-control">
            <!--dropdown-toggle ??-->
            <option value="Brasil">Option one</option>
            <option value="Senegal">Option two</option>
            <option value="hh">Option s</option>
            <option value="gg">Option sd</option>
            <option value="ff">Option f</option>
            <option value="dd">Option g</option>
            <option value="ss">Option n</option>
            <option value="zz">Option b</option>
            <option value="xx">Option v</option>

          </select>
        </div>
      </div>

      <!-- Text input-->
      <div class="form-group">
        <label class="col-md-4 control-label" for="email">E-mail</label>
        <div class="col-md-4">
          <input id="email" name="email" type="text" placeholder="user-email@mail.com" class="form-control input-md" required="">

        </div>
      </div>



      <!-- Password input-->
      <div class="form-group">
        <label class="col-md-4 control-label" for="passwordinput">Password</label>
        <div class="col-md-4">
          <input id="passwordinput" name="passwordinput" type="password" placeholder="Enter your password" class="form-control input-md"
            required="">

        </div>
      </div>

      <!-- Button -->
      <div class="form-group">
        <label class="col-md-4 control-label" for="singlebutton"></label>
        <div class="col-md-4">
          <button id="singlebutton" name="singlebutton" class="btn btn-primary">Register</button>
        </div>
      </div>

    </fieldset>
  </form>
</div>